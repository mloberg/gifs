{
    "private": true,
    "scripts": {
        "start": "concurrently -k --restart-tries 3 --restart-after 3000 -p [{name}] -n webpack,jekyll -c yellow.bold,cyan.bold npm:watch:webpack npm:watch:jekyll",
        "dev": "encore dev",
        "prod": "encore prod",
        "watch:webpack": "encore dev --watch",
        "watch:jekyll": "bundle exec jekyll serve --watch --open",
        "postinstall": "bundle install --path=vendor/bundle --jobs=4 --retry=3",
        "lint": "eslint --cache . && prettier --check .",
        "fix": "eslint --cache --fix . && prettier --write ."
    },
    "dependencies": {
        "@meilisearch/instant-meilisearch": "^0.6.0",
        "alpinejs": "^3.8.1",
        "copy-to-clipboard": "^3.3.1",
        "instantsearch.js": "^4.38.0"
    },
    "devDependencies": {
        "@babel/plugin-transform-runtime": "^7.16.10",
        "@symfony/webpack-encore": "^1.8.1",
        "autoprefixer": "^10.4.2",
        "concurrently": "^7.0.0",
        "eslint": "^8.7.0",
        "eslint-config-airbnb-base": "^15.0.0",
        "eslint-plugin-import": "^2.25.4",
        "postcss": "^8.4.5",
        "postcss-loader": "^6.2.1",
        "prettier": "^2.5.1",
        "prettier-plugin-tailwindcss": "^0.1.4",
        "tailwindcss": "^3.0.17"
    },
    "browserslist": [
        "> 2%"
    ]
}
